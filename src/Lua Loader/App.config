<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <log4net>
    <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="%envFolderPath{DesktopDirectory}//Logs//LuaForExcel.LuaLoader.log" />
      <staticLogFileName value="true" />
      <rollingStyle value="Once" />
      <maxSizeRollBackups value="1" />
      <maximumFileSize value="512MB" />
      <layout type="log4net.Layout.PatternLayout">
        <IgnoresException value="False" />
        <conversionPattern value="%date [%2thread] %-5level %logger - %message%newline%exception" />
      </layout>
      <threshold value="ALL" />
    </appender>
    <root>
      <level value="WARN" />
      <appender-ref ref="RollingFile" />
    </root>
    <logger name="LuaForExcel.LuaLoader">
      <level value="DEBUG" />
    </logger>
  </log4net>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
  </startup>
</configuration>
